<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->

    <style name="ThemeOverlay.CustomCalendar" parent="">
        <item name="android:dateTextAppearance">@style/CustomCalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayText</item>
        <item name="colorControlActivated">@color/purple_200</item>
        <item name="colorControlNormal">@color/my_unfocused_month_date_color</item>
    </style>

    <style name="CustomCalendarDateText">
        <item name="android:textColor">@color/my_focused_month_date_color</item> <!-- Change date color -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomWeekDayText">
        <item name="android:textColor">#03A9F4</item> <!-- Change weekday color -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCalendarHeader">
        <item name="android:textColor">@color/month_year_color</item> <!-- Change date color -->"
    </style>

    <style name="CustomSearchView" parent="ThemeOverlay.AppCompat.Light">=
        <item name="searchIcon">@drawable/search</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>
</resources>