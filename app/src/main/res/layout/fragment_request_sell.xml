<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="6dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Sell Form"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/input_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity (e.g., 1 kg)"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price per kg"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Date"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:inputType="none" />

        <EditText
            android:id="@+id/input_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Notes (optional)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/submit_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/shade1_green"
            android:padding="12dp" />
    </LinearLayout>

</ScrollView>
