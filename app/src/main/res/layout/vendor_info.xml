<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9"
    tools:context=".Vendor_Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Market Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/MarketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Market Name"
                android:inputType="textPersonName"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Street -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:inputType="text"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Barangay -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Barangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Barangay"
                android:inputType="text"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Municipality -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Municipality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Municipality"
                android:inputType="text"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Longitude -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:inputType="numberDecimal"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Latitude -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:inputType="numberDecimal"
                android:textColorHint="#888888"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Save Button -->
        <Button
            android:id="@+id/btnUpdateMarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Market Info"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/shade1_green"
            android:layout_marginTop="24dp"
            android:padding="14dp" />

<!--        <Button-->
<!--            android:id="@+id/btnAddProducts"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Add Products"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:padding="14dp" />-->

    </LinearLayout>
</ScrollView>
